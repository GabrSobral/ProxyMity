// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id
  name       String
  email      String    @unique
  createdAt  DateTime
  lastOnline DateTime?
  password   String

  photoUrl String?

  participants Participant[]
}

model Participant {
  userId        String
  conversationId String
  createdAt DateTime
  removedAt DateTime?

  user User @relation(fields: [userId], references: [id])
  conversation Conversation @relation(fields: [conversationId], references: [id])

  @@id([userId, conversationId])
}

model Message {
  id               String @id
  content          String
  authorId         String
  recipientId      String
  repliedMessageId String? @unique
  sentAt           DateTime?
  receivedAt       DateTime?
  readAt           DateTime?
  conversationId   String 

  conversation     Conversation @relation(fields: [conversationId], references: [id])
  repliedMessage   Message? @relation("repliedMessage", fields: [repliedMessageId], references: [id])
  parentMessage    Message? @relation("repliedMessage")
}

model Conversation {
  id String @id
  created_at DateTime
  groupId String @unique
  isGroup Boolean @default(false)

  messages Message[]
  group Group @relation(fields: [groupId], references: [id])

  participants Participant[]
}

model Group {
  id String @id
  name String
  description String
  createdAt DateTime
  updatedAt DateTime?

  conversation Conversation?
}

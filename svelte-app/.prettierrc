{
   "plugins": ["prettier-plugin-svelte"],
   "overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }],

   "semi": true,
   "trailingComma": "es5",
   "singleQuote": true,
   "singleAttributePerLine": false,
   "endOfLine": "lf",
   "tabWidth": 3,
   "useTabs": false,
   "arrowParens": "avoid",
   "bracketSpacing": true,
   "bracketSameLine": false,
   "printWidth": 120
}
